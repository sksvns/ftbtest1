# Application Configuration
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# Database Configuration
MONGO_URI=mongodb://localhost:27017/fliptowin
MONGO_MAX_POOL_SIZE=10
MONGO_MIN_POOL_SIZE=5
MONGO_CONNECT_TIMEOUT_MS=10000
MONGO_SERVER_SELECTION_TIMEOUT_MS=5000

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-characters-long
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX=5
PLAY_RATE_LIMIT_MAX=50

# Email Configuration
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=FlipToWin Support <noreply@fliptowin.com>

# Security Headers
HELMET_ENABLED=true
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Game Configuration
GAME_MAX_BET_AMOUNT=1000
GAME_MIN_BET_AMOUNT=1
GAME_MAX_CONCURRENT_PLAYS=3

# Session Configuration
SESSION_SECRET=your-session-secret-key-at-least-32-characters-long
SESSION_MAX_AGE=86400000

# Redis Configuration (for session store and caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
